<body>
  <div class="container">
    <h2> <%= @list.name %>  </h2>
    <div class="row">
      <div class="col-sm">
        <p> <strong>Movie Poster</strong></p>
      </div>
      <div class="col-sm">
        <p> <strong>Movie</strong></p>
      </div>
      <div class="col-sm">
        <p> <strong>Comment</strong></p>
      </div>
      <div class="col-sm">
        <p> <strong> Delete </strong> </p>
      </div>
    </div>
    <% @list.movies.each do |movie| %>
    <% movie.bookmarks.each do |b|%>
      <div class="row">
      <div class="col-sm">
        <p> <%= movie.poster_url %> </p>
      </div>
      <div class="col-sm">
        <p> <%= movie.title %> </p>
      </div>
      <div class="col-sm">
        <p> <%= b.comment %> </p>
      </div>
      <div class="col-sm">
        <p> <%= link_to 'Delete', bookmark_path(b), method: :delete, class: "btn btn-outline-danger" %> </p>
      </div>
        <% end %>
      <% end %>
    </div>
    <ul class="no-bullets">
      <li><%= link_to 'Back to Lists', lists_path, class: "btn btn-outline-primary" %></li>
      <li><%= link_to 'Create a New List', new_list_path, class: "btn btn-outline-success" %></li>
      <li><%= link_to 'Create a New Bookmark for this list!', new_list_bookmark_path(@list), class: "btn btn-outline-success"  %></li>
      <li><%= link_to "Delete #{@list.name}",
                  list_path(@list),
                  class: "btn btn-outline-danger",
                  method: :delete,
                  data: {confirm: "Are you sure you want to delete #{@list.name}?"} %></li>
    </ul>
  </div>
</body>




